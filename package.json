{
  "name": "tauri-plugin-clerk",
  "version": "0.1.0",
  "author": "@Nipsuli",
  "description": "An unofficial Tauri SDK for Clerk",
  "keywords": [
    "clerk",
    "tauri",
    "auth"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Nipsuli/tauri-plugin-clerk.git"
  },
  "type": "module",
  "types": "./dist-js/index.d.ts",
  "main": "./dist-js/index.js",
  "module": "./dist-js/index.js",
  "exports": {
    "types": "./dist-js/index.d.ts",
    "import": "./dist-js/index.js"
  },
  "files": [
    "dist-js",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown",
    "dev:js": "tsdown --watch ./guest-js",
    "prepublishOnly": "npm run build",
    "pretest": "npm build",
    "format": "prettier --write \"guest-js/**/*.ts\"",
    "checks:format": "prettier --check \"guest-js/**/*.ts\"",
    "checks:types": "tsc --noEmit",
    "checks:lint": "oxlint guest-js",
    "checks": "run-p checks:*"
  },
  "dependencies": {
    "@clerk/clerk-js": "^5.99.0",
    "@clerk/types": "^4.92.0",
    "@tauri-apps/api": ">=2.5.0",
    "@tauri-apps/plugin-http": "^2.4.4"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "oxlint": "^1.23.0",
    "prettier": "^3.6.2",
    "tsdown": "^0.15.7",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  }
}
